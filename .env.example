# La Falange Trading Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# PostgreSQL (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading_db

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# ============================================
# AI / LLM
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# BROKER SELECTION
# ============================================
# Options: oanda | ig | interactive_brokers | alpaca
BROKER_TYPE=oanda

# ============================================
# OANDA BROKER
# ============================================
OANDA_API_KEY=your-oanda-api-key
OANDA_ACCOUNT_ID=your-account-id
OANDA_ENVIRONMENT=practice  # practice | live

# ============================================
# IG MARKETS BROKER
# ============================================
IG_API_KEY=your-ig-api-key
IG_USERNAME=your-username
IG_PASSWORD=your-password
IG_ACCOUNT_ID=your-account-id
IG_ENVIRONMENT=demo  # demo | live

# ============================================
# INTERACTIVE BROKERS
# ============================================
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for TWS paper, 7496 for live
IB_CLIENT_ID=1

# ============================================
# ALPACA
# ============================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true

# ============================================
# TRADING CONFIGURATION
# ============================================
TRADING_ENABLED=false  # Set to true to enable live trading
MAX_POSITIONS=5
MAX_DAILY_TRADES=50
MAX_DAILY_LOSS_PERCENT=5.0
DEFAULT_RISK_PER_TRADE=1.0  # Percentage of account

# ============================================
# MARKET DATA
# ============================================
CMC_API_KEY=your-coinmarketcap-api-key

# ============================================
# NOTIFICATIONS
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
