# Prometheus Trading Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# PostgreSQL (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading_db

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# ============================================
# AI PROVIDERS
# Configure at least one provider for AI analysis
# ============================================

# OpenAI (GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude Sonnet, Haiku)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google (Gemini Flash, Pro)
GOOGLE_API_KEY=your-google-api-key

# Groq (Llama 3.3 - Ultra Fast!)
GROQ_API_KEY=gsk_your-groq-api-key

# Mistral (Large, Small)
MISTRAL_API_KEY=your-mistral-api-key

# Ollama (Local, Free - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================
# AIML API (Multi-Model Gateway - RECOMMENDED)
# ============================================
# One API key for 400+ AI models including:
# Vision-capable (used in Standard mode):
# - ChatGPT 5.2
# - Gemini 3 Pro
# - Grok 4.1 Fast
# - Qwen3 VL
# Text-only (used in Premium/Ultra mode):
# - DeepSeek V3.1
# - GLM 4.5 Air
# Get your key at: https://aimlapi.com
AIML_API_KEY=your-aiml-api-key
AIML_BASE_URL=https://api.aimlapi.com/v1

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# ============================================
# BROKER SELECTION
# ============================================
# Options: oanda | metatrader | ig | interactive_brokers | alpaca
BROKER_TYPE=oanda

# ============================================
# OANDA BROKER
# ============================================
OANDA_API_KEY=your-oanda-api-key
OANDA_ACCOUNT_ID=your-account-id
OANDA_ENVIRONMENT=practice  # practice | live

# ============================================
# METATRADER (MT4/MT5) via MetaApi.cloud
# ============================================
# 1. Create account at https://metaapi.cloud
# 2. Add your MT4/MT5 account
# 3. Get your access token and account ID
METAAPI_ACCESS_TOKEN=your-metaapi-access-token
METAAPI_ACCOUNT_ID=your-metaapi-account-id

# ============================================
# IG MARKETS BROKER
# ============================================
IG_API_KEY=your-ig-api-key
IG_USERNAME=your-username
IG_PASSWORD=your-password
IG_ACCOUNT_ID=your-account-id
IG_ENVIRONMENT=demo  # demo | live

# ============================================
# INTERACTIVE BROKERS
# ============================================
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for TWS paper, 7496 for live
IB_CLIENT_ID=1

# ============================================
# ALPACA
# ============================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true

# ============================================
# TRADING CONFIGURATION
# ============================================
TRADING_ENABLED=false  # Set to true to enable live trading
MAX_POSITIONS=5
MAX_DAILY_TRADES=50
MAX_DAILY_LOSS_PERCENT=5.0
DEFAULT_RISK_PER_TRADE=1.0  # Percentage of account

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# NOTIFICATIONS
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================
# EMAIL (RESEND)
# ============================================
# For production, verify your sending domain in Resend and use that domain here.
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=Prometheus <onboarding@resend.dev>
FRONTEND_URL=http://localhost:3000

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
